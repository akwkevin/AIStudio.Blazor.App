@namespace AIStudio.Blazor.UI.Pages.Exception
@page "/exception/404"

<Result Status="404"
        Title="404"
        SubTitle="Sorry, the page you visited does not exist.">
    <Extra>
        <Button Type="primary" OnClick="BackHome">Back Home</Button>
    </Extra>
</Result>

@code {

    [Inject] NavigationManager NavigationManager { get; set; }

    void BackHome()
    {
        NavigationManager.NavigateTo("/");
    }

}